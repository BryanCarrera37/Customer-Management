@model Customer_Management.Web.DTO.Company.AvailableCompanyDTO

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar compañía</h1>
<hr />

<div class="mb-20">
    <a class="btn btn-info" asp-action="Index">Volver</a>
</div>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row align-end">
                <div class="form-group col-xl-6">
                    <label asp-for="Name" class="control-label">Nombre</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-6 flex-row align-end" style="align-items: flex-end">
                    <input type="submit" value="Confirmar cambio" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
