@model Customer_Management.Web.DTO.Company.AvailableCompanyDTO

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Confirmación de Eliminación</h1>

<h3>¿Está seguro de querer eliminar esta Empresa?</h3>
<div>
    <hr />
    <dl class="row mt-10">
        <dt class = "col-sm-2">Nombre</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">Fecha de creación</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-info" asp-action="Index">Volver</a> |
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
