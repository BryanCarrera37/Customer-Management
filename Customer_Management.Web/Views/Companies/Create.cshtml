@model Customer_Management.Web.DTO.Company.AvailableCompanyDTO

@{
    ViewData["Title"] = "Agregar compañía";
}

<h1>Registrar o crear Empresa</h1>

<hr />

<div class="mb-20">
    <a class="btn btn-info" asp-action="Index">Volver</a>
</div>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-xl-6">
                    <label asp-for="Name" class="control-label">Nombre</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-6 flex-row align-end" style="align-items: flex-end">
                    <input type="submit" value="Registrar" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
